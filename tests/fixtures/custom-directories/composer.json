{
    "name": "wp-translation-downloader/custom-directories",
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "path",
            "url": "../../../"
        }
    ],
    "require": {
        "inpsyde/wp-translation-downloader": "*",
        "johnpbloch/wordpress": "5.5.*@stable",
        "wpackagist-plugin/backwpup": "3.10.0"
    },
    "extra": {
        "wp-translation-downloader": {
            "languages": [
                "de_DE"
            ],
            "languageRootDir": "languages/",
            "directories": {
                "types": {
                    "wordpress-core": "core"
                },
                "names": {
                    "*/backwpup": "inpsyde"
                }
            }
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true,
            "inpsyde/wp-translation-downloader": true
        }
    }
}