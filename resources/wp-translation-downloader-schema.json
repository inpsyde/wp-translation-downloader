{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "wp-translation-downloader",
    "type": "object",
    "required": [
        "languages"
    ],
    "properties": {
        "auto-run": {
            "type": "boolean"
        },
        "languages": {
            "title": "Languages",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "excludes": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "languageRootDir": {
            "type": "string",
            "examples": [
                "public/wp-content/languages"
            ]
        },
        "directory": {
            "type": "string",
            "title": "[deprecated] Please use in future languageRootDir instead.",
            "deprecated": true
        },
        "directories": {
            "title": "Custom directories mapped by 'type' or 'name'",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "names": {
                    "type": "object",
                    "additionalProperties": {
                        "type": [
                            "string",
                            "boolean"
                        ]
                    }
                },
                "types": {
                    "type": "object",
                    "additionalProperties": {
                        "type": [
                            "string",
                            "boolean"
                        ]
                    }
                }
            }
        },
        "api": {
            "title": "Custom API Endpoints mapped by 'type' or 'name'",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "names": {
                    "type": "object",
                    "additionalProperties": {
                        "type": [
                            "string",
                            "boolean"
                        ]
                    }
                },
                "types": {
                    "type": "object",
                    "additionalProperties": {
                        "type": [
                            "string",
                            "boolean"
                        ]
                    }
                }
            }
        }
    }
}
